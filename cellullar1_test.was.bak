;***** waitForButton *****
func waitForButton: integer
	param integer id_boton
	integer Event

	while 1                 ; Loop forever.
		dlgevent 0 Event        ; Get dialog event.
		switch Event            ; Evaluate the event.
	      case id_boton
			exitwhile            ; Se ha pulsado el boton.
	      endcase
	      default
	      endcase
		endswitch
	endwhile

	return 0

endfunc